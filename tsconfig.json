{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM"]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}

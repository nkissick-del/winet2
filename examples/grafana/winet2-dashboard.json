{
  "dashboard": {
    "title": "Winet2 Monitoring Dashboard",
    "tags": ["winet2", "solar", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "title": "Application Uptime",
        "type": "stat",
        "gridPos": {"h": 4, "w": 4, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "winet2_uptime_seconds",
            "legendFormat": "Uptime"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 300},
                {"color": "green", "value": 3600}
              ]
            }
          }
        }
      },
      {
        "title": "Connection Success Rate",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 4, "x": 4, "y": 0},
        "targets": [
          {
            "expr": "rate(winet2_ws_connection_successes_total[5m]) / rate(winet2_ws_connection_attempts_total[5m]) * 100",
            "legendFormat": "Success %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            }
          }
        }
      },
      {
        "title": "Active Devices",
        "type": "stat",
        "gridPos": {"h": 4, "w": 4, "x": 8, "y": 0},
        "targets": [
          {
            "expr": "winet2_active_devices",
            "legendFormat": "Devices"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "title": "WebSocket Connections",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "rate(winet2_ws_connection_attempts_total[5m])",
            "legendFormat": "Attempts/sec"
          },
          {
            "expr": "rate(winet2_ws_connection_successes_total[5m])",
            "legendFormat": "Successes/sec"
          },
          {
            "expr": "rate(winet2_ws_connection_failures_total[5m])",
            "legendFormat": "Failures/sec"
          }
        ]
      },
      {
        "title": "Message Throughput",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "rate(winet2_ws_messages_received_total[1m])",
            "legendFormat": "Received/sec"
          },
          {
            "expr": "rate(winet2_ws_messages_sent_total[1m])",
            "legendFormat": "Sent/sec"
          }
        ]
      },
      {
        "title": "MQTT Publishing",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "rate(winet2_mqtt_publish_count_total[5m])",
            "legendFormat": "Publishes/sec"
          },
          {
            "expr": "rate(winet2_mqtt_publish_errors_total[5m])",
            "legendFormat": "Errors/sec"
          }
        ]
      },
      {
        "title": "Error Rates",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "rate(winet2_watchdog_triggers_total[5m])",
            "legendFormat": "Watchdog Triggers"
          },
          {
            "expr": "rate(winet2_request_timeouts_total[5m])",
            "legendFormat": "Request Timeouts"
          },
          {
            "expr": "rate(winet2_schema_validation_errors_total[5m])",
            "legendFormat": "Validation Errors"
          }
        ]
      },
      {
        "title": "Modbus Operations",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "rate(winet2_modbus_read_count_total[5m])",
            "legendFormat": "Read Attempts"
          },
          {
            "expr": "rate(winet2_modbus_read_successes_total[5m])",
            "legendFormat": "Read Successes"
          },
          {
            "expr": "rate(winet2_modbus_read_failures_total[5m])",
            "legendFormat": "Read Failures"
          }
        ]
      },
      {
        "title": "Sensors Published",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "winet2_sensors_published_total",
            "legendFormat": "Total Sensors"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      }
    ],
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s"
  }
}

<?xml version="1.0"?>
<Container version="2">
  <Name>winet2</Name>
  <Repository>winet2:latest</Repository>
  <Registry></Registry>
  <Network>host</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/nkissick-del/winet2/issues</Support>
  <Project>https://github.com/nkissick-del/winet2</Project>
  <Overview>Bridge Sungrow Winet/Winet-S/Winet-S2 gateways to Home Assistant using MQTT Discovery. Version 2.0.0 with Node.js 20 LTS, TypeScript 5.9.3, and Zod v4. Features multi-inverter support, SSL/TLS security, and automatic sensor discovery with friendly naming ("Daily Yield (inverter_1)" format). For local testing - ensure image is built locally first.</Overview>
  <Category>HomeAutomation:</Category>
  <WebUI/>
  <TemplateURL>https://raw.githubusercontent.com/nkissick-del/winet2/main/winet2-unraid-template.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/nkissick-del/winet2/main/assets/icon.png</Icon>
  <ExtraParams>--restart=unless-stopped</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText/>
  <DonateLink/>
  <Requires>Home Assistant with MQTT broker enabled</Requires>
  <Config Name="WINET_HOST" Target="WINET_HOST" Default="192.168.1.114" Mode="" Description="Single inverter IP address (use WINET_HOSTS for multiple)" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="WINET_HOSTS" Target="WINET_HOSTS" Default="192.168.1.114,192.168.1.12" Mode="" Description="Comma-separated list of inverter IP addresses (overrides WINET_HOST)" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="WINET_NAMES" Target="WINET_NAMES" Default="inverter_1,inverter_2" Mode="" Description="Comma-separated friendly names for inverters (MQTT-safe, no spaces)" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="MQTT_URL" Target="MQTT_URL" Default="mqtt://192.168.1.101:1883" Mode="" Description="MQTT broker URL (required)" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="MQTT_USER" Target="MQTT_USER" Default="" Mode="" Description="MQTT username (optional)" Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="MQTT_PASS" Target="MQTT_PASS" Default="" Mode="" Description="MQTT password (optional)" Type="Variable" Display="always" Required="false" Mask="true"/>
  <Config Name="WINET_USER" Target="WINET_USER" Default="admin" Mode="" Description="Inverter username (default: admin)" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="WINET_PASS" Target="WINET_PASS" Default="pw8888" Mode="" Description="Inverter password (default: pw8888)" Type="Variable" Display="advanced" Required="false" Mask="true"/>
  <Config Name="POLL_INTERVAL" Target="POLL_INTERVAL" Default="10" Mode="" Description="Polling interval in seconds (default: 10)" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="SSL" Target="SSL" Default="true" Mode="" Description="Enable SSL/HTTPS for inverter communication (true/false)" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="SSL_VALIDATION" Target="SSL_VALIDATION" Default="bypass" Mode="" Description="SSL validation level: bypass (default), pinned, strict" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="INVERTER_CERT_FINGERPRINTS" Target="INVERTER_CERT_FINGERPRINTS" Default="" Mode="" Description="SSL certificate fingerprints for pinned validation (comma-separated)" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="HA_PREFIX" Target="HA_PREFIX" Default="homeassistant/sensor" Mode="" Description="Home Assistant MQTT discovery prefix (default: homeassistant/sensor)" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="ANALYTICS" Target="ANALYTICS" Default="false" Mode="" Description="Enable analytics (true/false, default: false)" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="SINGLE_PHASE_SYSTEM" Target="SINGLE_PHASE_SYSTEM" Default="false" Mode="" Description="Hide 3-phase specific sensors for single-phase systems (true/false)" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="TZ" Target="TZ" Default="America/New_York" Mode="" Description="Timezone (e.g., America/New_York, Europe/London, Australia/Sydney)" Type="Variable" Display="advanced" Required="false" Mask="false"/>
</Container>